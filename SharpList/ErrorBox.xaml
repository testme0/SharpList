<Window x:Class="SharpList.ErrorBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="An error occurred" Height="118" Width="330"
        WindowStartupLocation="CenterScreen"
        Icon="/SharpList;component/Img/icon.png" ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
            <GradientStop Color="#FF470505" Offset="0" />
            <GradientStop Color="#FFFFC900" Offset="1" />
            <GradientStop Color="#FFDBC000" Offset="0.967" />
            <GradientStop Color="#FFB90C0C" Offset="0.721" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Button Content="OK" Height="23" HorizontalAlignment="Left" Margin="117,46,0,0" Name="okButton" VerticalAlignment="Top" Width="75" Click="okButton_Click" />
        <Label Content="" FontWeight="Bold" Foreground="#FFDBC000" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="errorMessage" VerticalAlignment="Top" FontSize="11" Visibility="Visible" Opacity="1" Width="284" />
    </Grid>
</Window>
